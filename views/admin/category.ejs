<body>
    <%- include('../layout/adminNav.ejs') %>
  
 <div class="d-flex align-items-center flex-column justify-content-center gap-4">
  <h3 class="mt-5">Category management</h3>
  <!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
        <!-- Add a new category -->
      <div class="mb-3">
        <h2>Add a new category</h2>
        <form method="POST" action="/categories/add">
          <div class="mb-3">
            <label class="form-label">Category name</label>
            <input type="text" class="form-control" name="categoryName" required>
          </div>
          <button type="submit" class="btn btn-primary">Add category</button>
        </form>
      </div>

      <!-- Add a new subcategory -->
      <div class="mb-3">
        <h2>Add a new subcategory</h2>
        <form method="POST" action="/categories/subcategories/add">
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select class="form-control" name="categoryId" required>
              <option value="">Select a category</option>
              <option value="1">Category 1</option>
              <option value="2">Category 2</option>
              <option value="3">Category 3</option>
              <!-- Add more categories here -->
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Subcategory name</label>
            <input type="text" class="form-control" name="subcategoryName" required>
          </div>
          <button type="submit" class="btn btn-primary">Add subcategory</button>
        </form>
      </div>

      <!-- Disable a category -->
      <div class="mb-3">
        <h2>Disable a category</h2>
        <form method="POST" action="/categories/disable">
          <div class="mb-3">
            <label class="form-label">Category</label>
            <select class="form-control" name="categoryId" required>
              <option value="">Select a category</option>
              <option value="1">Category 1</option>
              <option value="2">Category 2</option>
              <option value="3">Category 3</option>
              <!-- Add more categories here -->
            </select>
          </div>
          <button type="submit" class="btn btn-danger">Disable category</button>
        </form>
      </div>

      <!-- Disable a subcategory -->
      <div class="mb-3">
        <h2>Disable a subcategory</h2>
        <form method="POST" action="/categories/subcategories/disable">
          <div class="mb-3">
            <label class="form-label">Subcategory</label>
            <select class="form-control" name="subcategoryId" required>
              <option value="">Select a subcategory</option>
              <option value="1">Subcategory 1</option>
              <option value="2">Subcategory 2</option>
              <option value="3">Subcategory 3</option>
              <!-- Add more subcategories here -->
            </select>
          </div>
          <button type="submit" class="btn btn-danger">Disable category</button>

 </div>
  <script src="/javascripts/admin/users.js"></script>
  
</body>
</html>