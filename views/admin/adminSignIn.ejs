<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/adminStyles/adminSignIn.css" type="text/css">
</head>

<body>
    <%- include('../layout/adminNav.ejs') %>
    <div class="body topMargin">
        <form class="loginArea" method="post">
            <div class="welcomeDiv">
                <img class="logoWelcome" src="/images/reusables/Orange Simple Online Shopping Logo.png" alt="">
                <span class="welcomeMessage">Welcome Admin, log in to continue</span>
            </div>
            <div class="email">
                <span class="emailHead">Email</span>
                <input type="email" id="email" name="email" required class="emailInput" type="text">
                <p id="email-error"></p>
            </div>
            <div class="email">
                <span class="emailHead">Password</span>
                <input type = "password" id="password" name="password" required class="emailInput" type="text">
                <div class="d-flex justify-content-between w-100">
                    <p id="password-error"></p>
                    <span class="forgotPass">Forgot password?</span>
                </div>
            </div>
            <div class="logInButtonArea">
                <button class="logInButton"><span class="buttonText">Log In</span></button>
            </div>
            <h6 style="color: rgb(204, 59, 30)" id="error" class="mt-2">
                <% if(locals.message){ %> 
                    <span >  <%= locals.message  || '' %> </span>
                <% } %> 
            </h6>
        </form>
    </div>
    <script src="/validation/signIn.js"></script>
    
</body>

</html>