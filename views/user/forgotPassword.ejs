<%- include('../layout/header.ejs') %>
  <link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
  <link rel="stylesheet" href="/stylesheets/userStyles/forgotPassword.css" type="text/css">
  </head>

  <body>
    <%- include('../layout/nav.ejs') %>
      <div class="topMargin d-flex justify-content-center">
        <form class="container-fluid align-items-center" method="post">
          <div class="row d-flex flex-column align-items-center gap-4">
            <div class="d-flex flex-column align-items-center container">
              <div class="row d-flex flex-column align-items-center">
                <img class="col-4" src="/images/reusables/Orange Simple Online Shopping Logo.png" alt="">
                <span class="col-auto h5">Please enter your email id to receive an OTP for resetting your password.</span>
              </div>
            </div>
            <div class="email">
              <input id="email" name="email" required class="emailInput" type="text">
              <p id="emailError"></p>
            </div>
            <div class="d-flex flex-column align-items-center">
              <button class="logInButton"><span class="buttonText">Continue</span></button>
            </div>
            <h6 id="error" class="d-flex justify-content-center" style="color: rgb(204, 59, 30)" id="error" class="mt-2">
              <% if(locals.message){ %>
                <span>
                  <%= locals.message || '' %>
                </span>
                <% } %>
            </h6>
          </div>
        </form>
      </div>
      <script src="/validation/forgotPassword.js"></script>

  </body>

  </html>