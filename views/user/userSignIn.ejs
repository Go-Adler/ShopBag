<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
</head>

<body>
    <%- include('../layout/nav.ejs') %>
    <div class="topMargin signin container bg-secondary d-flex flex-column align-items-center">
      <div class="row bg-warning d-flex flex-column align-items-center">
        <form class="loginArea d-flex flex-column align-items-center bg-info col-10" method="post">
            <div class="welcomeDiv d-flex flex-column align-items-center bg-primary">
                <img class="logoWelcome" src="/images/reusables/Orange Simple Online Shopping Logo.png" alt="">
                <span class="welcomeMessage">Log in, to start shopping</span>
                <p><b><%= locals.errorMessage ? locals.errorMessage : '' %></b></p>
            </div>
            <div class="bg-warning d-flex flex-column align-items-center">
                <span class="">Email</span>
                <input type="email" id="email" name="email" required class="emailInput" type="text">
                <p id="email-error"></p>
            </div>
            <div class="bg-warning d-flex flex-column align-items-center">
                <span class="">Password</span>
                <input type = "password" id="password" name="password" required class="emailInput" type="text">
                <div class="d-flex justify-content-between w-100">
                    <p id="password-error"></p>
                    <a href="/user/forgot-password"><span class="forgotPass">Forgot password?</span></a>
                </div>
            </div>
            <div class="logInButtonArea">
                <button class="logInButton"><span class="buttonText">Log In</span></button>
                <div class="d-flex gap-2">
                    <span> Don't have an account?</span>
                        <a href="/user/signup" class="">
                            <span>Signup</span>
                        </a>
                </div>
            </div>
            <h6 style="color: rgb(204, 59, 30)" id="error" class="mt-2">
                <% if(locals.message){ %> 
                    <span >  <%= locals.message  || '' %> </span>
                <% } %> 
            </h6>
        </form>
      </div>
    </div>
    <script src="/validation/signIn.js"></script>
    
</body>
 
</html>