<%- include('../layout/header.ejs') %>
    <link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
    </head>
    <%- include('../layout/nav.ejs') %>
    <link rel="stylesheet" href="/stylesheets/userStyles/productPage.css" type="text/css">

    <body class="d-flex align-items-center justify-content-center flex-column marginTop container-fluid">
        <div class="d-flex col-6 mb-5 flex-column align-items-center">
            <h3 class="m-0">Product description</h3>
            <div class="underLine"></div>
          </div>
                <div class="d-flex justify-content-center row gap-4">
                    <div class="col-6 row d-flex flex-column align-items-end">

                        <img src="<%=product.images[0].path %>" class="defaultImage col-8 d-flex card"
                            alt="<%= product.name %>">
                            <div class="row col-8 d-flex justify-content-between alternateImages">
                                <img src="<%=product.images[1].path %>" class="col-3"
                                    alt="<%= product.name %>">
                                <img src="<%=product.images[2].path %>" class="col-3"
                                    alt="<%= product.name %>">
                                <img src="<%=product.images[3].path %>" class="col-3"
                                    alt="<%= product.name %>">
                            </div>
                        <div class="product-image-zoom">
                        </div>
                    </div>
                    <div class="container col-6 card-body d-flex flex-column p-4">
                        <div class="row  d-flex flex-column align-items-start">
                            <span class='d-flex align-items-center gap-1'><h3 class='m-0'> <%= product.productName %> </h3><span class='d-flex align-items-center' style='font-weight: 500; font-size: 14px; color: rgb(158, 0, 0);'><%= product.stock <= 0 ? '( Out of stock )' : '' %></span></span>

                            <h5 class="price mt-2">â‚¹&nbsp;<%= product.price %> </h5>
                            <h5> <%= product.productCategory.name %> </h5>
                            <h5> <%= product.productSubcategory.name %> </h5>
                            <p class="text-danger">
                                <% if(product.isDisabled) { %>
                                    Product not available
                                    <% } %>
                            </p>
                            <p class="card-text description">
                                <%= product.description %>
                            </p>
                            <div class="container-fluid">
                                <% if (product.stock > 0) { %>
                                    <div class="row d-flex align-items-center gap-4 p-2">
                                        <a class="col-2" href="/user/products/add-cart/<%= product._id %>"><button  class="addToCartButton">ADD TO CART</button></a>
    
                                        <a class="col-2" href="/user/products/add-cart/<%= product._id %>"><button class="buyNowButton">BUY NOW</button></a>
                                        <!-- <% if(isWishlist) { %>
                                        <i class="fa-solid fa-heart col"></i>
                                        <% } %> -->
                                    </div>
                                </div>
                            <% } %>
                                       
                        </div>
                    </div>

                </div>
                <script src="/javascripts/user/productZoom.js"></script>
    </body>

    </html>