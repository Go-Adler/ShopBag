<%- include('../layout/header.ejs') %>
  <link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
  </head>
  <%- include('../layout/nav.ejs') %>
    <%- include('../layout/categoryBar.ejs') %>
      <link rel="stylesheet" href="/stylesheets/userStyles/cart.css" type="text/css">
      <link rel="stylesheet" href="/stylesheets/userStyles/checkout.css" type="text/css">

      <body class="d-flex align-items-center flex-column marginTop container-fluid gap-4">
          <div class="d-flex col-6 flex-column align-items-center mb-5">
            <h3 class="m-0">Checkout</h3>
            <div class="underLine"></div>
          </div>

          <!-- Form Starts  -->
          <form action="" class="d-flex col-6 container-fluid w-75">
            <div class="row d-flex w-100">

              <!-- First part -->
              <div class="formArea col-6 d-flex flex-column align-items-center">
                <div class="email">
                  <span class="emailHead">Name</span>
                  <input type="text" id="name" name="name" required class="emailInput">
                  <p id="name-error"></p>
                </div>
                <div class="email">
                  <span class="emailHead">Phone number</span>
                  <country type="text" id="number" name="number" required class="emailInput">
                    <p id="number-error"></p>
                </div>
                <div class="email">
                  <span class="emailHead">Pincode</span>
                  <input type="text" id="pincodel" name="pincode" required class="emailInput">
                  <p id="email-error"></p>
                </div>
                  <div class="email">
                  <span class="emailHead">Locality</span>
                  <input type="text" id="locality" name="locality" required class="emailInput">
                  <p id="locality-error"></p>
                </div>
                <div class="d-flex flex-column">
                  <span class="emailHead">Address</span>
                  <textarea cols="30" rows="5" id="address" name="address" required class="emailInput textArea"></textarea>
                  <div class="d-flex justify-content-between w-100">
                    <p id="address-error"></p>
                  </div>
                </div>
                <div class="email">
                  <span class="emailHead">City / District / Town </span>
                  <input type="text" id="city" name="city" required class="emailInput">
                  <div class="d-flex justify-content-between w-100">
                    <p id="city-error"></p>
                  </div>
                </div>
                <div class="email">
                  <span class="emailHead">State</span>
                  <input type="text" id="state" name="state" required class="emailInput">
                  <div class="d-flex justify-content-between w-100">
                    <p id="state-error"></p>
                  </div>
                </div>
                <div class="email">
                  <span class="emailHead">Landmark (optional)</span>
                  <input type="text" id="landmark" name="landmark" class="emailInput">
                  <div class="d-flex justify-content-between w-100">
                    <p id="landmark-error"></p>
                  </div>
                </div>
                <div class="email gap-2 d-flex">
                  <span class="emailHead mt-4">Address type</span>
                 <div class="gap-2 d-flex">
                  
                  <input type="radio" id="addressType" name="addressType" required>
                  <h6 class="m-0">Work</h6>
                 </div>
                 <div class="d-flex gap-2">
                  <input type="radio" id="addressType" name="addressType" required>
                  <h6 class="m-0">Home</h6>
                 </div>
                  <div class="d-flex justify-content-between w-100">
                    <p id="addressType-error"></p>
                  </div>
                </div>
                <!-- <div class="logInButtonArea">
                  <button class="logInButton"><span class="buttonText">Sign up</span></button>
                  <h6 style="color: rgb(204, 59, 30)" id="error" class="mt-2">
                  </h6>
                </div> -->
              </div>

              <!-- Second part -->
              <div class="placeOrder col-6 d-flex flex-column align-items-center">
                

                <!-- Discount -->
                <div class="mt-5 discountArea container p-4 d-flex flex-column gap-3">
                  <h5>Discount code</h5>
                  <div class="row d-flex justify-content-center gap-3">
                    <input id="couponInput" type="text" class="emailInput col-5 discountInput">
                    <button id="couponButton" class="col-5 applyButton">APPLY COUPON</button>
                  </div>
                </div>

                <!-- Order -->
                <div class="mt-3 discountArea container-fluid p-4">
                  <h5>Your order</h5>
                 <div class="row d-flex justify-content-between productsDescription mt-3 mb-3 pt-3">
                  <h5 class="col-auto">Products</h5>
                  <h5 class="col-auto">Total</h5>
                 </div>
                 <div class="row d-flex justify-content-between productName">
                  <h6 class="col-auto">Sugar</h6>
                  <h6 class="col-auto">₹ 100</h6>
                 </div>
                 <div class="row d-flex justify-content-between productName">
                  <h6 class="col-auto">SugarCane</h6>
                  <h6 class="col-auto">₹ 100</h6>
                 </div>
                 <div class="row d-flex justify-content-between productName">
                  <h6 class="col-auto">Whear</h6>
                  <h6 class="col-auto">₹ 100</h6>
                 </div>
                 <div class="row d-flex justify-content-between productsDescription mt-3 mb-3 pt-3">
                  <h5 class="col-auto">Subtotal</h5>
                  <h5 class="col-auto">₹ 100</h5>
                 </div>
                 <div class="row d-flex justify-content-between productsDescription totalArea mt-3 mb-3 pt-3 pb-2">
                  <h5 class="col-auto">Total</h5>
                  <h5 class="col-auto">₹ 300</h5>
                 </div>

                 <h5 class="mt-3">Choose payment method</h5>
                 <div class="d-flex flex-column gap-2">
                  <div class="d-flex gap-3 align-items-center mt-3">
                    <input name="paymentMethod" type="radio">
                    <h6 class="m-0">COD</h6>
                  </div>
                  <div class="d-flex gap-3 align-items-center">
                    <input name="paymentMethod" type="radio">
                    <h6 class="m-0">UPI</h6>
                  </div>
                  <div class="d-flex gap-3 align-items-center">
                    <input name="paymentMethod" type="radio">
                    <h6 class="m-0">Cards</h6>
                  </div>
                 </div>
                <div class="d-flex align-items-center mt-4">
                <a href="/user/checkout" class="checkoutButtonLink d-flex justify-content-center w-100"> <button type="submit" class="newButton w-100"><span class="buttonText">PLACE ORDER</span></button></a>

                  <h6 style="color: rgb(204, 59, 30)" id="error" class="mt-2">
                  </h6>
                </div>

                </div>
              </div>
            </div>
          </form>
        <script src="/javascripts/user/productZoom.js"></script>
      </body>

      </html>