<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/common.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/actionBar.css" type="text/css">

</head>

<body class="d-flex flex-column w-100 align-items-center" style='margin-bottom: 2000px;'>
  <%- include('../layout/nav.ejs') %>
  <% let userNew = user[0] %>
      <div class="d-flex flex-column align-items-center mb-5" style='margin-top: 100px;'>
        <h3 class="m-0">Profile</h3>
        <div class="underLine"></div>
      </div>
      <div class="p-3 w-75 mt-3 d-flex flex-column justify-content-center align-items-start gap-3" style="border-radius: 10px; color: black; background-color: #efefef; box-shadow: 0px 2px 3px 1px rgb(202, 202, 202);">
        <div class='d-flex w-100 justify-content-between'>
          <div class='w-25 mt-5 ms-5 d-flex align-items-center flex-column justify-content-center'>
            <img class="userImage w-100" src="/images/reusables/84537269.png" alt="">
            <h4 class='mt-3'><%=userNew.name %></h4>

        </div>
        <div class='w-100 bg-info d-flex align-items-center justify-content-center'>
          <div class="d-flex mt-0 me-5 gap-2  justify-content-end align-items-center flex-column w-75 mb-3 greenColor">
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfd5c6;'><h6 class='m-0'>Email</h6><h6 class='m-0'><%=userNew.email %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfd5c6;'><h6 class='m-0'>Phone</h6><h6 class='m-0'><%=userNew.phone %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfd5c6;'><h6 class='m-0'>Gender</h6><h6 class='m-0'><%=userNew.gender %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfd5c6;'><h6 class='m-0'>Wallet balance</h6><h6 class='m-0'>â‚¹ <%=userNew.wallet.balance %></h6></span>
          </div>
        </div>
        </div>
          <div class="gap-3 mt-5 w-100 d-flex flex-column align-items-center justify-content-center p-3" style='border-radius: 10px; border: 1px solid rgb(198, 198, 198);'>
              <h5>Choose default address <i class="fa-solid fa-caret-down"></i></h5>
              <% userNew.address.forEach((address, index) => { %>
                <div class="row w-100 bg-warning">
                  <div class="border col-3 w-100 addressArea d-flex justify-content-between gap-4 p-4" style="border-radius: 10px;">
                    <div class='d-flex gap-2 align-items-start'>
                      <input class='mt-2 cursor-pointer' type="radio" name="address" <%= index === 0 ? 'checked' : '' %> value="<%= address._id  %>" required>
                    <div>
                      <h5>
                        <%= address.name %>
                      </h5>
                      <h6>
                        <%= address.city %>
                      </h6>
                      <h6 class='d-flex align-items-center gap-2 m-0' style='color:#8fb23c;'>
                        <% if(address.addressType === 'home') { %>
                          <i class="fa-solid fa-house" style='font-size: 12px;'></i>
                        <% } else {%>
                          <i class="fa-solid fa-briefcase d-flex align-items-end" style='font-size: 12px;'></i>
                        <% } %>
                        <%= address.addressType === 'home' ? ' Home ' : ' Work ' %>
                      </h6>
                      
                    </div>
                    </div>
                    <div class='d-flex flex-column justify-content-between gap-2'>
                      <a href="/user/profile/address/edit/<%= address._id  %>"><i class="fa-solid fa-pen-to-square cursor-pointer"></i></a>
                      <i data-id="<%= address._id  %>" class="fa-solid fa-trash cursor-pointer" style='color: #b27b3c;'></i>
                    </div>
                  </div>
              <% }) %>
            </div>
            <div class='w-75 d-flex justify-content-start p-4 pt-0'>
             <a href="/user/profile/add-address"> <button type='button' class='addAddress'>add new address</button></a>
            </div>
          </div>
          <div>hi</div>
          <%= user  %>

      </div>
</body>
</html>