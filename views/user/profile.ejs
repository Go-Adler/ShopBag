<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/common.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/actionBar.css" type="text/css">

</head>

<body class="d-flex flex-column w-100 align-items-center" style='margin-bottom: 2000px;'>
  <%- include('../layout/nav.ejs') %>
  <% let userNew = user[0] %>
  <% let address = userNew.address  %>
      <div class="d-flex flex-column align-items-center mb-5" style='margin-top: 100px;'>
        <h3 class="m-0">Profile</h3>
        <div class="underLine"></div>
      </div>
      <div class="p-3 w-75 mt-3 d-flex flex-column justify-content-center align-items-start gap-3" style="border-radius: 10px; color: black; background-color: #efefef; box-shadow: 0px 2px 3px 1px rgb(202, 202, 202);">
        <div class='d-flex w-100 justify-content-center'>
          <div class='w-25 mt-5 ms-5 d-flex align-items-center flex-column justify-content-center pe-5'  style='border-right: 2px solid rgb(216, 216, 216);'>
            <img class="userImage w-100" src="/images/reusables/84537269.png" alt="">
            <h4 class='mt-3'><%=userNew.name %></h4>
          </div>
        <div class='w-75 d-flex flex-column align-items-start justify-content-end ms-5'>
          <a href="/user/profile/edit" class='w-75 cursor-pointer d-flex align-items-center gap-2 justify-content-end mb-3'><span>Edit</span><i class="fa-solid fa-pen-to-square cursor-pointer"></i></a>
          <div class="d-flex mt-0 me-5 gap-2  justify-content-end flex-column w-75 mb-3" style='color: rgb(107, 107, 107);'>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfcfcf;'><h6 class='m-0'>Email</h6><h6 class='m-0'><%=userNew.email %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfcfcf;'><h6 class='m-0'>Phone</h6><h6 class='m-0'><%=userNew.phone %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfcfcf;'><h6 class='m-0'>Gender</h6><h6 class='m-0'><%=userNew.gender %></h6></span>
            <span class='d-flex gap-2 w-100 p-2 ps-4 justify-content-between align-items-center' style='border-radius: 8px;  background-color: #cfcfcf;'><h6 class='m-0'>Wallet balance</h6><h6 class='m-0'>â‚¹ <%=userNew.wallet.balance %></h6></span>
          </div>
        </div>
      </div>
      <div class="w-100 col-6 d-flex flex-column align-items-center mt-5 justify-content-center">
        <div class="d-flex flex-column w-75 gap-4 p-4" style='border-radius: 10px; border: 1px solid rgb(217, 217, 217); background-color: #e6e6e6;'>
          <h5>Manage address</h5>
          <% address.forEach((address, index) => { %>
            <div class="border addressArea d-flex justify-content-between gap-4 p-4" style="border-radius: 10px; background-color: #cfcfcf;">
              <div class='d-flex gap-2 align-items-start'>
              <div>
                <h5>
                  <%= address.name %>
                </h5>
                <h6>
                  <%= address.city %>
                </h6>
                <h6 class='d-flex align-items-center gap-2 m-0' style='color:#719126;'>
                  <% if(address.addressType === 'home') { %>
                    <i class="fa-solid fa-house" style='font-size: 12px;'></i>
                  <% } else {%>
                    <i class="fa-solid fa-briefcase d-flex align-items-end" style='font-size: 12px;'></i>
                  <% } %>
                  <%= address.addressType === 'home' ? ' Home ' : ' Work ' %>
                </h6>
                
              </div>
              </div>
              <div class='d-flex flex-column justify-content-between gap-2'>
                <a href="/user/profile/address/edit/<%= address._id  %>"><i class="fa-solid fa-pen-to-square cursor-pointer"></i></a>
                <i data-id="<%= address._id  %>" class="fa-solid fa-trash cursor-pointer" style='color: #b27b3c;'></i>
              </div>
            </div>
          <% }) %>
          <div class='w-75 d-flex justify-content-start pt-0'>
            <a href="/user/profile/add-address"> <button type='button' class='addAddress'>add new address</button></a>
          </div>
        </div>
       
      </div>
      <script src="/javascripts/user/profile.js"></script>
</body>
</html>