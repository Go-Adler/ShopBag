<%- include('../layout/header.ejs') %>
<link rel="stylesheet" href="/stylesheets/userStyles/userSignIn.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/otpStyle.css" type="text/css">
<link rel="stylesheet" href="/stylesheets/userStyles/otpVerificationForgotPassword.css" type="text/css">

</head>

<body>
    <%- include('../layout/nav.ejs') %>
    <div class="d-flex align-items-center justify-content-center otpBody">
        <form class="d-flex align-items-center flex-column gap-3" method="post">
            <div class="welcomeDiv">
                <img class="logoWelcome" src="/images/reusables/Orange Simple Online Shopping Logo.png" alt="">
                <span class="h4">Enter OTP to verify your email</span>
            </div>
            <div class="email">
                <input id="otp" name="otpEntered" required class="emailInput" type="text">
                <p id="otp-error"></p>
            </div>
            <div class="d-flex flex-column gap-2">
                <button class="logInButton"><span class="buttonText">Continue</span></button>
                <div class="d-flex gap-2">
                    <span> Resend OTP?</span>
                        <a href="/user/signup" class="">
                            <span>Resend</span>
                        </a>
                </div>
            </div>
            <h6 style="color: rgb(204, 59, 30)" id="error" class="mt-2">
                <% if(locals.message){ %> 
                    <span >  <%= locals.message  || '' %> </span>
                <% } %> 
            </h6>
        </form>
    </div>
    <script src="/validation/otp.js"></script>
    
</body>
 
</html>