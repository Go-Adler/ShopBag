<script>
  function toggleDropdown() {
    const dropDownClassList = document.querySelector('#dropdown').classList
    if (dropDownClassList.contains('logoutDropdownShow')) {
      dropDownClassList.remove('logoutDropdownShow')
    } else {
      dropDownClassList.add('logoutDropdownShow')
    }
  }
</script>
